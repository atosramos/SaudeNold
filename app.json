{
  "expo": {
    "name": "SaudeNold",
    "slug": "SaudeNold",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "scheme": "saudenold",
    "plugins": [
      "expo-router",
      [
        "expo-notifications",
        {
          "icon": "./assets/icon.png",
          "color": "#4ECDC4"
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "O app precisa acessar suas fotos para adicionar imagens de medicamentos e contatos.",
          "cameraPermission": "O app precisa acessar a câmera para tirar fotos de medicamentos e contatos."
        }
      ]
    ],
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#4ECDC4"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.saudenold.app",
      "infoPlist": {
        "NSPhotoLibraryUsageDescription": "O app precisa acessar suas fotos para adicionar imagens de medicamentos e contatos.",
        "NSCameraUsageDescription": "O app precisa acessar a câmera para tirar fotos de medicamentos e contatos."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#4ECDC4"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.saudenold.app",
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "RECEIVE_BOOT_COMPLETED"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": ""
      }
    }
  }
}
