{
  "expo": {
    "name": "SaudeNold",
    "slug": "SaudeNold",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "scheme": "saudenold",
    "plugins": [
      "expo-router"
    ],
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#4ECDC4"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.saudenold.app",
      "infoPlist": {
        "NSPhotoLibraryUsageDescription": "O app precisa acessar suas fotos para adicionar imagens de medicamentos e contatos.",
        "NSCameraUsageDescription": "O app precisa acessar a c√¢mera para tirar fotos de medicamentos e contatos."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#4ECDC4"
      },
      "package": "com.saudenold.app",
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "RECEIVE_BOOT_COMPLETED"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "extra": {
      "eas": {
        "projectId": ""
      },
      "apiUrl": "http://localhost:8000"
    }
  }
}
