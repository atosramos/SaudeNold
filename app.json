{
  "expo": {
    "name": "SaudeNold",
    "slug": "SaudeNold",
    "version": "1.0.0",
    "scheme": "saudenold",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "plugins": [
      [
        "expo-notifications",
        {
          "icon": "./assets/icon.png",
          "color": "#FF6B6B",
          "mode": "production"
        }
      ]
    ],
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "UIBackgroundModes": [
          "remote-notification"
        ],
        "NSLocationWhenInUseUsageDescription": "Usamos sua localizacao aproximada para proteger sua conta.",
        "NSFaceIDUsageDescription": "Permita o uso de biometria para entrar mais rapido.",
        "NSMicrophoneUsageDescription": "Permita o uso do microfone para ditado."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.atosramos.SaudeNold",
      "intentFilters": [
        {
          "action": "VIEW",
          "category": ["BROWSABLE", "DEFAULT"],
          "data": [
            { "scheme": "saudenold", "host": "auth", "pathPrefix": "/verify" },
            { "scheme": "saudenold", "host": "auth", "pathPrefix": "/reset" }
          ]
        }
      ],
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "USE_BIOMETRIC",
        "RECORD_AUDIO",
        "RECEIVE_BOOT_COMPLETED",
        "VIBRATE",
        "WAKE_LOCK",
        "SCHEDULE_EXACT_ALARM",
        "USE_EXACT_ALARM"
      ]
    },
    "notification": {
      "icon": "./assets/icon.png",
      "color": "#FF6B6B",
      "iosDisplayInForeground": true,
      "androidMode": "default",
      "androidCollapsedTitle": "Alarmes de Sa√∫de"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "extra": {
      "apiUrl": "http://192.168.0.101:8000",
      "apiKey": ""
    }
  }
}
